{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "esnext",
      "jsx": "preserve",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "moduleResolution": "node",
      "baseUrl": "."
    },
    "include": ["src/**/*", "src/pages"], 
    "exclude": ["node_modules"]
  }